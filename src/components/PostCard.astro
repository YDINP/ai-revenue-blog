---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  category: string;
  slug: string;
  image?: { url: string; alt: string };
}

const { title, description, pubDate, category, slug, image } = Astro.props;
const formattedDate = new Date(pubDate).toLocaleDateString('ko-KR', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<div class="post-card">
  <a href={`/blog/${slug}/`}>
    <div class="post-card-image-wrap">
      {image ? (
        <img
          src={image.url}
          alt={image.alt}
          class="post-card-image"
          loading="lazy"
        />
      ) : (
        <div class="post-card-image-placeholder">
          <span>{category}</span>
        </div>
      )}
    </div>
    <div class="post-card-body">
      <h3>{title}</h3>
      <p>{description}</p>
      <div class="post-card-footer">
        <span class="post-category" data-cat={category.toLowerCase()}>{category}</span>
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      </div>
    </div>
  </a>
</div>
