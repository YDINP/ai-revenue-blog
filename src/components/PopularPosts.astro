---
import { getCollection } from 'astro:content';

// Get all published posts
const allPosts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());

// For now, show the 5 most recent posts (can be upgraded to use Supabase pageview data later)
const popularPosts = allPosts.slice(0, 5);

const categoryLabel: Record<string, string> = {
  ai: 'AI',
  dev: 'Dev',
  review: 'Review',
};
---

<aside class="popular-posts-widget">
  <h3 class="popular-posts-title">인기 글 TOP 5</h3>
  <ol class="popular-posts-list">
    {popularPosts.map((post, index) => (
      <li class="popular-post-item">
        <span class="popular-post-rank">{index + 1}</span>
        <div class="popular-post-content">
          <a href={`/blog/${post.id}/`} class="popular-post-link">
            {post.data.title}
          </a>
          <span class="popular-post-category" data-cat={post.data.category.toLowerCase()}>
            {categoryLabel[post.data.category.toLowerCase()] || post.data.category}
          </span>
        </div>
      </li>
    ))}
  </ol>
  <p class="popular-posts-note">* 최신 글을 기준으로 표시됩니다</p>
</aside>

<style>
  .popular-posts-widget {
    margin: 2.5rem 0;
    padding: 1.75rem;
    background: linear-gradient(135deg, var(--color-bg-secondary) 0%, var(--color-bg) 100%);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.06);
    position: relative;
    overflow: hidden;
  }

  .popular-posts-widget::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #f59e0b, #ef4444, #8b5cf6);
    border-radius: 16px 16px 0 0;
  }

  :root.dark .popular-posts-widget {
    background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    box-shadow: 0 4px 20px rgba(0,0,0,0.3);
  }

  .popular-posts-title {
    font-size: 1.15rem;
    font-weight: 800;
    margin-bottom: 1.25rem;
    color: var(--color-text);
    letter-spacing: -0.02em;
    text-align: center;
  }

  .popular-posts-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.875rem;
  }

  .popular-post-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 0.875rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 10px;
    transition: all 0.2s ease;
  }

  .popular-post-item:hover {
    transform: translateX(4px);
    border-color: var(--color-primary);
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.1);
  }

  :root.dark .popular-post-item {
    background: #1e293b;
  }

  .popular-post-rank {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    flex-shrink: 0;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-light));
    color: white;
    font-size: 0.85rem;
    font-weight: 800;
    border-radius: 6px;
    box-shadow: 0 2px 8px rgba(37, 99, 235, 0.25);
  }

  .popular-post-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
    min-width: 0;
  }

  .popular-post-link {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-text);
    text-decoration: none;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.2s;
  }

  .popular-post-link:hover {
    color: var(--color-primary);
  }

  .popular-post-category {
    display: inline-block;
    align-self: flex-start;
    padding: 0.125rem 0.5rem;
    border-radius: 4px;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .popular-post-category[data-cat="ai"] {
    background: #dbeafe;
    color: #1e40af;
  }

  .popular-post-category[data-cat="dev"] {
    background: #d1fae5;
    color: #065f46;
  }

  .popular-post-category[data-cat="review"] {
    background: #fef3c7;
    color: #92400e;
  }

  :root.dark .popular-post-category[data-cat="ai"] {
    background: #1e3a5f;
    color: #93bbfd;
  }

  :root.dark .popular-post-category[data-cat="dev"] {
    background: #064e3b;
    color: #6ee7b7;
  }

  :root.dark .popular-post-category[data-cat="review"] {
    background: #78350f;
    color: #fcd34d;
  }

  .popular-posts-note {
    margin-top: 1rem;
    padding-top: 0.75rem;
    border-top: 1px solid var(--color-border);
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    text-align: center;
    opacity: 0.7;
  }

  @media (max-width: 640px) {
    .popular-posts-widget {
      padding: 1.25rem 1rem;
      margin: 1.5rem 0;
    }

    .popular-posts-title {
      font-size: 1rem;
    }

    .popular-post-rank {
      width: 24px;
      height: 24px;
      font-size: 0.75rem;
    }

    .popular-post-link {
      font-size: 0.85rem;
    }
  }
</style>
