        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      .blog-section {
        background: var(--dash-surface);
        border: 1px solid var(--dash-border);
        border-radius: 12px;
        overflow: hidden;
      }

      .section-header {
