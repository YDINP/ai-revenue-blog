      .chart-bar:hover { opacity: 0.8; }

      .chart-bar-label {
        position: absolute;
        bottom: -1.25rem;
        font-size: 0.5625rem;
        color: var(--dash-text-dim);
      }

      .chart-bar-tooltip {
