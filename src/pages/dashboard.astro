          const result = await rpc('admin_delete_comment', {
            p_id: commentId,
            p_admin_key: adminKey
          });

          if (result?.success) {
            loadCommentData();
          } else if (result?.error === 'unauthorized') {
            alert('Í¥ÄÎ¶¨Ïûê ÌÇ§Í∞Ä Ïò¨Î∞îÎ•¥ÏßÄ ÏïäÏäµÎãàÎã§.');
            localStorage.removeItem('dash-admin-key');
            adminKey = '';
          } else {
            alert('ÏÇ≠Ï†ú Ïã§Ìå®: ' + (result?.error || 'unknown'));
          }
        } catch (e) {
          alert('ÏÇ≠Ï†ú Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.');
          console.error(e);
        }
      };

      // Ìä∏Î†åÎìú Ï∞®Ìä∏ Î†åÎçî
      function renderTrend(data) {
        const container = document.getElementById('comment-trend-chart');
        if (!container) return;

        if (data.length === 0) {
          container.innerHTML = '<div class="no-data">ÏµúÍ∑º 7ÏùºÍ∞Ñ ÎåìÍ∏ÄÏù¥ ÏóÜÏäµÎãàÎã§.</div>';
