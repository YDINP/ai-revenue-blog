      }

      // Ï†ÄÏû•Îêú ÌÇ§Í∞Ä ÏûàÏúºÎ©¥ ÏûêÎèô Ïù∏Ï¶ù
      function loadCommentDashboard() {
        if (adminKey) {
          showCommentDashboard();
        }
      }

      async function loadCommentData() {
        try {
          // ÌÜµÍ≥Ñ + Î™©Î°ù + Ìä∏Î†åÎìú Î≥ëÎ†¨ Î°úÎìú
          const [stats, comments, trend] = await Promise.all([
            rpc('get_comment_stats'),
            rpc('get_all_comments', { p_limit: 100, p_offset: 0 }),
            rpc('get_comment_trend')
          ]);

          // ÌÜµÍ≥Ñ Ïπ¥Îìú ÏóÖÎç∞Ïù¥Ìä∏
          if (stats && typeof stats === 'object') {
            document.getElementById('cm-total').textContent = fmt(stats.total || 0);
            document.getElementById('cm-today').textContent = fmt(stats.today || 0);
            document.getElementById('cm-reports').textContent = fmt(stats.reports || 0);
            document.getElementById('cm-by-source').textContent =
              `TechFlow ${stats.blog_count || 0} / LifeFlow ${stats.lifeflow_count || 0}`;
          }

          // ÎåìÍ∏Ä Î™©Î°ù Ï†ÄÏû• + Î†åÎçî
          allComments = Array.isArray(comments) ? comments : [];
          renderComments();

          // Ìä∏Î†åÎìú Ï∞®Ìä∏
          renderTrend(Array.isArray(trend) ? trend : []);

        } catch (e) {
          console.error('Comment data load error:', e);
        }
      }

      function renderComments() {
        const container = document.getElementById('comment-list');
        if (!container) return;

        let filtered = allComments;
        if (currentFilter === 'blog') {
          filtered = allComments.filter(c => c.source === 'blog');
        } else if (currentFilter === 'lifeflow') {
          filtered = allComments.filter(c => c.source === 'lifeflow');
        } else if (currentFilter === 'reported') {
          filtered = allComments.filter(c => (c.report_count || 0) > 0);
        }

        if (filtered.length === 0) {
          container.innerHTML = '<div class="no-data">ÌëúÏãúÌï† ÎåìÍ∏ÄÏù¥ ÏóÜÏäµÎãàÎã§.</div>';
          return;
        }

        container.innerHTML = filtered.map(c => {
          const srcClass = c.source === 'blog' ? 'tf' : 'lf';
          const srcLabel = c.source === 'blog' ? 'TF' : 'LF';
          const date = new Date(c.created_at).toLocaleString('ko-KR', {
            month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit'
