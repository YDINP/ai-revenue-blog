          // "Ìè¨Ïä§Ìä∏ Ï†úÎ™© | TechFlow - AI & ÌÖåÌÅ¨ Ïù∏ÏÇ¨Ïù¥Ìä∏" ÌòïÌÉúÏóêÏÑú Ï†úÎ™©Îßå Ï∂îÏ∂ú
          return item.title.split(' | ')[0].split(' - ')[0];
        }
        const raw = decodeSlug(item.slug || item.path || '');
        // "/" ÎòêÎäî Îπà Í≤ΩÎ°úÎäî ÌôàÌéòÏù¥ÏßÄÎ°ú ÌëúÏãú
        if (!raw || raw === '/' || raw === '/blog' || raw === '/blog/') return 'ÌôàÌéòÏù¥ÏßÄ';
        return raw;
      }

      function sourceBadge(source) {
        if (source === 'blog') return '<span class="src-badge tf">TF</span>';
        if (source === 'lifeflow') return '<span class="src-badge lf">LF</span>';
        return '';
      }

      // === Top Pages Ï†ÑÏó≠ Îç∞Ïù¥ÌÑ∞ & ÌïÑÌÑ∞ ===
      let _topPagesData = [];
      let _topPagesFilter = 'all';

      function renderTopPages(data, filter) {
        if (data !== undefined) _topPagesData = data || [];
        if (filter !== undefined) _topPagesFilter = filter;

        const container = document.getElementById('top-pages');
        if (!container) return;

        let filtered = _topPagesData;
        if (_topPagesFilter !== 'all') {
          filtered = filtered.filter(p => p.source === _topPagesFilter);
        }

        if (filtered.length === 0) {
          container.innerHTML = '<div class="no-data">No page data yet</div>';
          return;
        }

        container.innerHTML = filtered.slice(0, 8).map((p, i) => {
          const title = getPageTitle(p);
          const displayTitle = title.length > 40 ? title.substring(0, 40) + '‚Ä¶' : title;
          return `<div class="top-page-item">
            <span class="top-page-rank">${i + 1}</span>
            ${sourceBadge(p.source)}
            <span class="top-page-title" title="${title}">${displayTitle || '(home)'}</span>
            <span class="top-page-views">${p.views}Ìöå</span>
          </div>`;
        }).join('');
      }

      // === Event Feed Ï†ÑÏó≠ Îç∞Ïù¥ÌÑ∞ & ÌïÑÌÑ∞ ===
      let _eventsData = [];
      let _eventsFilter = 'all';

      function renderEventFeed(data, filter) {
        if (data !== undefined) _eventsData = data || [];
        if (filter !== undefined) _eventsFilter = filter;

        const container = document.getElementById('event-feed');
        if (!container) return;

        let filtered = _eventsData;
        if (_eventsFilter !== 'all') {
          filtered = filtered.filter(e => e.source === _eventsFilter);
        }

        if (filtered.length === 0) {
          container.innerHTML = '<div class="no-data">No events yet. Visit the blog to generate data!</div>';
          return;
        }

        container.innerHTML = filtered.slice(0, 12).map(e => {
          const icon = EVENT_ICONS[e.event_type] || '\u2022';
          const label = EVENT_LABELS[e.event_type] || e.event_type;
          const title = getPageTitle(e);
          const shortTitle = title.length > 35 ? title.substring(0, 35) + '‚Ä¶' : title;
          const srcBadge = sourceBadge(e.source);

          return `<div class="event-item">
            <span class="event-icon ${e.event_type}">${icon}</span>
            <div class="event-content">
              <div class="event-action">${srcBadge} ${label}</div>
              <div class="event-page-title" title="${title}">${shortTitle || 'ÌôàÌéòÏù¥ÏßÄ'}</div>
            </div>
            <span class="event-time">${timeAgo(e.created_at)}</span>
          </div>`;
        }).join('');
      }

      // ÏÜåÏä§ ÌïÑÌÑ∞ ÌÉ≠ Ïù¥Î≤§Ìä∏
      document.getElementById('top-pages-tabs')?.addEventListener('click', (e) => {
        const btn = e.target.closest('.source-tab');
        if (!btn) return;
        document.querySelectorAll('#top-pages-tabs .source-tab').forEach(b => b.className = 'source-tab');
        const f = btn.dataset.filter;
        btn.className = 'source-tab ' + (f === 'blog' ? 'active-tf' : f === 'lifeflow' ? 'active-lf' : 'active');
        renderTopPages(undefined, f);
      });

      document.getElementById('event-tabs')?.addEventListener('click', (e) => {
        const btn = e.target.closest('.source-tab');
        if (!btn) return;
        document.querySelectorAll('#event-tabs .source-tab').forEach(b => b.className = 'source-tab');
        const f = btn.dataset.filter;
        btn.className = 'source-tab ' + (f === 'blog' ? 'active-tf' : f === 'lifeflow' ? 'active-lf' : 'active');
        renderEventFeed(undefined, f);
      });

      async function loadTraffic() {
        try {
          const [summary, hourly, topPages, events, trend] = await Promise.all([
            rpc('get_traffic_summary'),
            rpc('get_hourly_views'),
            rpc('get_top_pages', { p_limit: 10 }),
            rpc('get_recent_events', { p_limit: 20 }),
            rpc('get_daily_trend')
          ]);

          // Metrics
          const tv = Number(summary?.today_views) || 0;
          const yv = Number(summary?.yesterday_views) || 0;
          const tc = Number(summary?.today_clicks) || 0;
          const tl = Number(summary?.today_likes) || 0;
          const ts = Number(summary?.today_subscribers) || 0;

          document.getElementById('t-today-views').textContent = fmt(tv);
          const vd = deltaText(tv, yv);
          const vdEl = document.getElementById('t-views-delta');
          vdEl.textContent = vd.text;
          vdEl.className = `metric-delta ${vd.cls}`;

          document.getElementById('t-today-clicks').textContent = fmt(tc);
          const cdEl = document.getElementById('t-clicks-delta');
          cdEl.textContent = `total: ${fmt(Number(summary?.total_clicks) || 0)}`;
          cdEl.className = 'metric-delta neutral';

          document.getElementById('t-today-likes').textContent = fmt(tl);
          document.getElementById('t-likes-total').textContent = `total: ${fmt(Number(summary?.total_likes) || 0)}`;

          document.getElementById('t-subscribers').textContent = fmt(Number(summary?.total_subscribers) || 0);
          document.getElementById('t-subs-today').textContent = `today: +${ts}`;

          // Source breakdown
          const tfTv = Number(summary?.tf_today_views) || 0;
          const lfTv = Number(summary?.lf_today_views) || 0;
          const tfTc = Number(summary?.tf_today_clicks) || 0;
          const lfTc = Number(summary?.lf_today_clicks) || 0;

          const vbEl = document.getElementById('t-views-breakdown');
          if (vbEl) vbEl.innerHTML = `<span><i class="dot-tf"></i> TF: ${fmt(tfTv)}</span><span><i class="dot-lf"></i> LF: ${fmt(lfTv)}</span>`;

          const cbEl = document.getElementById('t-clicks-breakdown');
          if (cbEl) cbEl.innerHTML = `<span><i class="dot-tf"></i> TF: ${fmt(tfTc)}</span><span><i class="dot-lf"></i> LF: ${fmt(lfTc)}</span>`;

          // Also update summary cards
          document.getElementById('total-views').textContent = fmt(Number(summary?.total_views) || 0);
          document.getElementById('views-sub').textContent = tv > 0 ? `today +${tv}` : 'Collecting...';
          document.getElementById('total-clicks').textContent = fmt(Number(summary?.total_clicks) || 0);
          document.getElementById('clicks-sub').textContent = tc > 0 ? `today +${tc}` : 'Waiting...';

          // Summary card source split
          const tfTotal = Number(summary?.tf_total_views) || 0;
          const lfTotal = Number(summary?.lf_total_views) || 0;
          const totalV = Number(summary?.total_views) || 1;
          const tfTotalEl = document.getElementById('tf-total-views');
          const lfTotalEl = document.getElementById('lf-total-views');
          if (tfTotalEl) tfTotalEl.textContent = fmt(tfTotal);
          if (lfTotalEl) lfTotalEl.textContent = fmt(lfTotal);

          // Animated split bar
          const splitTfEl = document.getElementById('views-split-tf');
          const splitLfEl = document.getElementById('views-split-lf');
          if (splitTfEl) splitTfEl.style.width = Math.round(tfTotal / totalV * 100) + '%';
          if (splitLfEl) splitLfEl.style.width = Math.round(lfTotal / totalV * 100) + '%';

          // === ÌÉ≠Î≥Ñ Îç∞Ïù¥ÌÑ∞ ÏóÖÎç∞Ïù¥Ìä∏ ===
          // TechFlow ÌÉ≠
          const tfTabViewsEl = document.getElementById('tf-tab-views');
          const tfTabClicksEl = document.getElementById('tf-tab-clicks');
          const tfTabCvrEl = document.getElementById('tf-tab-cvr');
          if (tfTabViewsEl) tfTabViewsEl.textContent = fmt(tfTotal);
          if (tfTabClicksEl) tfTabClicksEl.textContent = fmt(Number(summary?.tf_total_clicks) || 0);
          if (tfTabCvrEl) {
            const tfCvr = tfTotal > 0 ? ((Number(summary?.tf_total_clicks) || 0) / tfTotal * 100).toFixed(2) : 0;
            tfTabCvrEl.textContent = tfCvr + '%';
          }
          const tfTabViewsSubEl = document.getElementById('tf-tab-views-sub');
          const tfTabClicksSubEl = document.getElementById('tf-tab-clicks-sub');
          if (tfTabViewsSubEl) tfTabViewsSubEl.textContent = tfTv > 0 ? `Ïò§Îäò +${fmt(tfTv)}` : 'ÏàòÏßë Ï§ë...';
          if (tfTabClicksSubEl) tfTabClicksSubEl.textContent = tfTc > 0 ? `Ïò§Îäò +${fmt(tfTc)}` : 'ÎåÄÍ∏∞ Ï§ë...';

          // LifeFlow ÌÉ≠
          const lfTabViewsEl = document.getElementById('lf-tab-views');
          const lfTabClicksEl = document.getElementById('lf-tab-clicks');
          const lfTabCvrEl = document.getElementById('lf-tab-cvr');
          if (lfTabViewsEl) lfTabViewsEl.textContent = fmt(lfTotal);
          if (lfTabClicksEl) lfTabClicksEl.textContent = fmt(Number(summary?.lf_total_clicks) || 0);
          if (lfTabCvrEl) {
            const lfCvr = lfTotal > 0 ? ((Number(summary?.lf_total_clicks) || 0) / lfTotal * 100).toFixed(2) : 0;
            lfTabCvrEl.textContent = lfCvr + '%';
          }
          const lfTabViewsSubEl = document.getElementById('lf-tab-views-sub');
          const lfTabClicksSubEl = document.getElementById('lf-tab-clicks-sub');
          if (lfTabViewsSubEl) lfTabViewsSubEl.textContent = lfTv > 0 ? `Ïò§Îäò +${fmt(lfTv)}` : 'ÏàòÏßë Ï§ë...';
          if (lfTabClicksSubEl) lfTabClicksSubEl.textContent = lfTc > 0 ? `Ïò§Îäò +${fmt(lfTc)}` : 'ÎåÄÍ∏∞ Ï§ë...';

          // Ïø†Ìå° ÌÉ≠
          const coupTotalClicksEl = document.getElementById('coup-total-clicks');
          const coupTodayClicksEl = document.getElementById('coup-today-clicks');
          const coupCtrEl = document.getElementById('coup-ctr');
          const coupTfCtrEl = document.getElementById('coup-tf-ctr');
          const coupLfCtrEl = document.getElementById('coup-lf-ctr');
          const totalClicks = Number(summary?.total_clicks) || 0;
          if (coupTotalClicksEl) coupTotalClicksEl.textContent = fmt(totalClicks);
          if (coupTodayClicksEl) coupTodayClicksEl.textContent = fmt(tc);
          if (coupCtrEl) {
            const overallCtr = totalV > 0 ? (totalClicks / totalV * 100).toFixed(2) : 0;
            coupCtrEl.textContent = overallCtr + '%';
          }
          if (coupTfCtrEl) {
            const tfCtr = tfTotal > 0 ? ((Number(summary?.tf_total_clicks) || 0) / tfTotal * 100).toFixed(2) : 0;
            coupTfCtrEl.textContent = tfCtr + '%';
          }
          if (coupLfCtrEl) {
            const lfCtr = lfTotal > 0 ? ((Number(summary?.lf_total_clicks) || 0) / lfTotal * 100).toFixed(2) : 0;
            coupLfCtrEl.textContent = lfCtr + '%';
          }
          const coupTfDetailEl = document.getElementById('coup-tf-detail');
          const coupLfDetailEl = document.getElementById('coup-lf-detail');
          if (coupTfDetailEl) coupTfDetailEl.textContent = `${fmt(Number(summary?.tf_total_clicks) || 0)} / ${fmt(tfTotal)}`;
          if (coupLfDetailEl) coupLfDetailEl.textContent = `${fmt(Number(summary?.lf_total_clicks) || 0)} / ${fmt(lfTotal)}`;

          // Ïø†Ìå° ÌÅ¥Î¶≠ Ïù¥Î≤§Ìä∏ ÌïÑÌÑ∞
          const coupangEvents = events.filter(e => e.event_type === 'coupang_click');
          const coupangEventsEl = document.getElementById('coupang-events');
          if (coupangEventsEl) {
            if (coupangEvents.length === 0) {
              coupangEventsEl.innerHTML = '<div class="no-data">ÏïÑÏßÅ Ïø†Ìå° ÌÅ¥Î¶≠ Îç∞Ïù¥ÌÑ∞Í∞Ä ÏóÜÏäµÎãàÎã§.</div>';
            } else {
              coupangEventsEl.innerHTML = coupangEvents.slice(0, 15).map(e => {
                const icon = 'üõí';
                const title = getPageTitle(e);
                const shortTitle = title.length > 40 ? title.substring(0, 40) + '‚Ä¶' : title;
                const srcBadge = sourceBadge(e.source);
                return `<div class="event-item">
                  <span class="event-icon coupang_click">${icon}</span>
                  <div class="event-content">
                    <div class="event-action">${srcBadge} Coupang Click</div>
                    <div class="event-page-title" title="${title}">${shortTitle || 'ÌôàÌéòÏù¥ÏßÄ'}</div>
                  </div>
                  <span class="event-time">${timeAgo(e.created_at)}</span>
                </div>`;
              }).join('');
            }
          }

          // Charts & feeds
          renderHourlyChart(hourly);
          renderTopPages(topPages);
          renderEventFeed(events);
          renderTrendChart(trend);

          document.getElementById('last-updated').textContent =
            `Updated: ${new Date().toLocaleString('ko-KR')}`;

        } catch (e) {
          console.error('Traffic load error:', e);
        }
      }

      document.getElementById('refresh-traffic')?.addEventListener('click', () => {
        loadTraffic();
      });

      // === ÌÉ≠ Ï†ÑÌôò Î°úÏßÅ ===
      const mainTabs = document.querySelectorAll('.main-tab');
      const tabContents = document.querySelectorAll('.tab-content');

      mainTabs.forEach(tab => {
        tab.addEventListener('click', () => {
          const targetTab = tab.dataset.tab;

          // Î™®Îì† ÌÉ≠ ÎπÑÌôúÏÑ±Ìôî
          mainTabs.forEach(t => {
            t.classList.remove('active', 'active-tf', 'active-lf', 'active-coupang');
          });

          // ÌÅ¥Î¶≠Ìïú ÌÉ≠ ÌôúÏÑ±Ìôî
          if (targetTab === 'techflow') {
            tab.classList.add('active-tf');
          } else if (targetTab === 'lifeflow') {
            tab.classList.add('active-lf');
          } else if (targetTab === 'coupang') {
            tab.classList.add('active-coupang');
          } else {
            tab.classList.add('active');
          }

          // Î™®Îì† ÌÉ≠ ÏΩòÌÖêÏ∏† Ïà®ÍπÄ
          tabContents.forEach(content => {
            content.classList.remove('active');
          });

          // ÏÑ†ÌÉùÌïú ÌÉ≠ ÏΩòÌÖêÏ∏† ÌëúÏãú
          const targetContent = document.getElementById(`tab-${targetTab}`);
          if (targetContent) {
            targetContent.classList.add('active');
          }
        });
      });

      // Init
      fetchLifeFlowRSS();
      loadTraffic();
      checkSupabase();
      setInterval(loadTraffic, 30000);
    </script>
