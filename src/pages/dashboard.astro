        }).join('');
      }

      function escHtml(s) {
        if (!s) return '';
        return s.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/"/g,'&quot;');
      }

      // ÎãµÎ≥Ä Ìèº ÌÜ†Í∏Ä
      window.toggleReplyForm = function(commentId) {
        const item = document.querySelector(`.cm-item[data-id="${commentId}"]`);
        if (!item) return;
        const existing = item.querySelector('.cm-reply-form');
        if (existing) { existing.remove(); return; }

        const body = item.querySelector('.cm-body');
        const form = document.createElement('div');
        form.className = 'cm-reply-form';
        form.innerHTML = `
          <input type="text" placeholder="Í¥ÄÎ¶¨Ïûê ÎãµÎ≥Ä ÏûÖÎ†•..." id="reply-input-${commentId}" />
          <button onclick="submitAdminReply('${commentId}')">Ï†ÑÏÜ°</button>
        `;
        body.appendChild(form);
        form.querySelector('input').focus();
      };

      // Í¥ÄÎ¶¨Ïûê ÎãµÎ≥Ä Ï†ÑÏÜ°
      window.submitAdminReply = async function(commentId) {
        const input = document.getElementById(`reply-input-${commentId}`);
        const content = input?.value?.trim();
        if (!content) return;

        const item = document.querySelector(`.cm-item[data-id="${commentId}"]`);
        const slug = item?.dataset.slug;
        const source = item?.dataset.source;

        try {
          const result = await rpc('admin_reply', {
            p_parent_id: commentId,
            p_slug: slug,
            p_source: source || 'blog',
            p_content: content,
            p_admin_key: adminKey
