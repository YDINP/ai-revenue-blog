          const coupTfDetailEl = document.getElementById('coup-tf-detail');
          const coupLfDetailEl = document.getElementById('coup-lf-detail');
          if (coupTfDetailEl) coupTfDetailEl.textContent = `${fmt(Number(summary?.tf_total_clicks) || 0)} / ${fmt(tfTotal)}`;
          if (coupLfDetailEl) coupLfDetailEl.textContent = `${fmt(Number(summary?.lf_total_clicks) || 0)} / ${fmt(lfTotal)}`;

          // Ïø†Ìå° ÌÅ¥Î¶≠ Ïù¥Î≤§Ìä∏ ÌïÑÌÑ∞
          const coupangEvents = events.filter(e => e.event_type === 'coupang_click');
          const coupangEventsEl = document.getElementById('coupang-events');
          if (coupangEventsEl) {
            if (coupangEvents.length === 0) {
              coupangEventsEl.innerHTML = '<div class="no-data">ÏïÑÏßÅ Ïø†Ìå° ÌÅ¥Î¶≠ Îç∞Ïù¥ÌÑ∞Í∞Ä ÏóÜÏäµÎãàÎã§.</div>';
