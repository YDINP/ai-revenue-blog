          if (result?.success) {
            loadCommentData();
          } else if (result?.error === 'unauthorized') {
            alert('Í¥ÄÎ¶¨Ïûê ÌÇ§Í∞Ä Ïò¨Î∞îÎ•¥ÏßÄ ÏïäÏäµÎãàÎã§. Îã§Ïãú Ïù∏Ï¶ùÌï¥ Ï£ºÏÑ∏Ïöî.');
            localStorage.removeItem('dash-admin-key');
            adminKey = '';
            document.getElementById('comment-auth').style.display = 'flex';
            document.getElementById('comment-dashboard').style.display = 'none';
          } else {
            alert('ÎãµÎ≥Ä Ï†ÑÏÜ° Ïã§Ìå®: ' + (result?.error || 'unknown'));
          }
        } catch (e) {
          alert('ÎãµÎ≥Ä Ï†ÑÏÜ° Ï§ë Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.');
          console.error(e);
        }
      };

      // Í¥ÄÎ¶¨Ïûê ÏÇ≠Ï†ú
      window.adminDeleteComment = async function(commentId) {
        if (!confirm('Ïù¥ ÎåìÍ∏ÄÏùÑ ÏÇ≠Ï†úÌïòÏãúÍ≤†ÏäµÎãàÍπå?')) return;
