---
import '../styles/global.css';
import { getCollection } from 'astro:content';

// TechFlow Ïã§Ï†ú Î∏îÎ°úÍ∑∏ Ìè¨Ïä§Ìä∏ ÌååÏùº Í∏∞Î∞ò ÌÜµÍ≥Ñ (ÎπåÎìú ÌÉÄÏûÑ)
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const tfPostCount = allPosts.length;

// TechFlow Ïπ¥ÌÖåÍ≥†Î¶¨Î≥Ñ Ìè¨Ïä§Ìä∏ Ïàò
const tfCategoryMap: Record<string, number> = {};
for (const post of allPosts) {
  const cat = post.data.category;
  tfCategoryMap[cat] = (tfCategoryMap[cat] || 0) + 1;
}

const tfCategoryStats = Object.entries(tfCategoryMap)
  .sort((a, b) => b[1] - a[1])
  .map(([name, count]) => ({ name, count }));

// TechFlow ÏµúÍ∑º Ìè¨Ïä§Ìä∏ (ÏµúÏã† 5Í∞ú)
const tfRecentPosts = allPosts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 5)
  .map(p => ({
    title: p.data.title,
    category: p.data.category,
    pubDate: p.data.pubDate.toISOString().split('T')[0],
    slug: p.id,
  }));

// LifeFlow Îç∞Ïù¥ÌÑ∞: RSS ÌîºÎìúÏóêÏÑú Í∞ÄÏ†∏Ïò§Í∏∞ (ÌÅ¥ÎùºÏù¥Ïñ∏Ìä∏ ÏÇ¨Ïù¥Îìú)
// ÎπåÎìú ÌÉÄÏûÑÏóêÎäî Í∏∞Î≥∏Í∞í ÏÇ¨Ïö©, Î∏åÎùºÏö∞Ï†ÄÏóêÏÑú Ïã§ÏãúÍ∞Ñ Î°úÎìú
const lfCategories = [
  { name: 'Lifestyle', count: 4, icon: 'sparkles', color: '#ec4899' },
  { name: 'Finance', count: 4, icon: 'banknotes', color: '#3b82f6' },
  { name: 'Health', count: 3, icon: 'heart', color: '#22c55e' },
  { name: 'Education', count: 3, icon: 'book', color: '#a855f7' },
  { name: 'Travel', count: 3, icon: 'plane', color: '#f97316' },
];
const lfPostCount = 17; // RSSÏóêÏÑú ÎèôÏ†Å Î°úÎìú
const lfCategoryCount = lfCategories.length;

// ÌÜµÌï© ÌÜµÍ≥Ñ
const totalPosts = tfPostCount + lfPostCount;
const totalCategories = tfCategoryStats.length + lfCategoryCount;
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Dashboard | TechFlow + LifeFlow</title>
    <meta name="robots" content="noindex, nofollow" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style is:global>
      :root {
        --dash-bg: #0f172a;
        --dash-surface: #1e293b;
        --dash-surface-hover: #334155;
        --dash-border: #334155;
        --dash-text: #f1f5f9;
        --dash-text-dim: #94a3b8;
        --dash-accent: #3b82f6;
        --dash-green: #22c55e;
        --dash-yellow: #eab308;
        --dash-red: #ef4444;
        --dash-purple: #a855f7;
        --dash-orange: #f97316;
        --dash-pink: #ec4899;
        --dash-cyan: #06b6d4;
      }

      * { margin: 0; padding: 0; box-sizing: border-box; }

      body {
        font-family: 'Pretendard', -apple-system, BlinkMacSystemFont, sans-serif;
        background: var(--dash-bg);
        color: var(--dash-text);
        min-height: 100vh;
      }

      /* Header */
      .dash-header {
        background: var(--dash-surface);
        border-bottom: 1px solid var(--dash-border);
        padding: 1rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      .dash-header h1 {
        font-size: 1.25rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .dash-header .logo-tf { color: var(--dash-accent); }
      .dash-header .logo-lf { color: var(--dash-green); }
      .dash-header .logo-sep { color: var(--dash-text-dim); font-weight: 400; }

      .dash-header .meta {
        font-size: 0.8125rem;
        color: var(--dash-text-dim);
        display: flex;
        align-items: center;
        gap: 1rem;
      }

      .live-dot {
        width: 8px; height: 8px;
        background: var(--dash-green);
        border-radius: 50%;
        animation: pulse 2s infinite;
      }

      @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.4; }
      }

      .dash-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1.5rem;
      }

      /* Summary Cards - ÏÉÅÎã® ÌÜµÌï© ÏöîÏïΩ */
      .summary-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      .summary-card {
        background: var(--dash-surface);
        border: 1px solid var(--dash-border);
        border-radius: 12px;
        padding: 1.25rem;
        position: relative;
        overflow: hidden;
      }

      .summary-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
      }

      .summary-card.accent-blue::before { background: var(--dash-accent); }
      .summary-card.accent-green::before { background: var(--dash-green); }
      .summary-card.accent-purple::before { background: var(--dash-purple); }
      .summary-card.accent-yellow::before { background: var(--dash-yellow); }

      .summary-card .label {
        font-size: 0.75rem;
        color: var(--dash-text-dim);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
      }

      .summary-card .value {
        font-size: 2rem;
        font-weight: 800;
        line-height: 1;
        margin-bottom: 0.25rem;
      }

      .summary-card .sub {
        font-size: 0.7rem;
        color: var(--dash-text-dim);
      }

      /* Blog Sections - Î∏îÎ°úÍ∑∏Î≥Ñ ÌÉ≠ */
      .blog-sections {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
        margin-bottom: 1.5rem;
      }

      .blog-section {
        background: var(--dash-surface);
        border: 1px solid var(--dash-border);
        border-radius: 12px;
        overflow: hidden;
      }

      .section-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--dash-border);
      }

      .section-header .section-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9375rem;
        font-weight: 700;
      }

      .section-header .section-badge {
        font-size: 0.6875rem;
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-weight: 600;
      }

      .badge-tf { background: rgba(59,130,246,0.2); color: #60a5fa; }
      .badge-lf { background: rgba(34,197,94,0.2); color: #4ade80; }

      .section-body { padding: 1rem 1.25rem; }

      /* Category Grid */
      .cat-grid {
        display: grid;
        gap: 0.5rem;
        margin-bottom: 1rem;
      }

      .cat-grid-4 { grid-template-columns: repeat(4, 1fr); }
      .cat-grid-5 { grid-template-columns: repeat(5, 1fr); }

      .cat-item {
        text-align: center;
        padding: 0.75rem 0.5rem;
        border-radius: 8px;
        background: var(--dash-surface-hover);
        transition: transform 0.15s;
      }

      .cat-item:hover { transform: translateY(-2px); }

      .cat-item .cat-name {
        font-size: 0.6875rem;
        color: var(--dash-text-dim);
        margin-bottom: 0.25rem;
      }

      .cat-item .cat-count {
        font-size: 1.25rem;
        font-weight: 800;
      }

      .cat-item .cat-pct {
        font-size: 0.625rem;
        color: var(--dash-text-dim);
      }

      /* Recent Posts */
      .recent-list { display: flex; flex-direction: column; gap: 0; }

      .recent-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.625rem 0;
        border-bottom: 1px solid var(--dash-border);
        font-size: 0.8125rem;
      }

      .recent-item:last-child { border-bottom: none; }

      .recent-rank {
        font-weight: 700;
        color: var(--dash-accent);
        width: 20px;
        text-align: center;
        flex-shrink: 0;
      }

      .recent-title {
        flex: 1;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }

      .cat-badge {
        display: inline-block;
        padding: 0.125rem 0.5rem;
        border-radius: 4px;
        font-size: 0.625rem;
        font-weight: 600;
        flex-shrink: 0;
      }

      .cat-ai { background: rgba(59,130,246,0.2); color: #60a5fa; }
      .cat-dev { background: rgba(34,197,94,0.2); color: #4ade80; }
      .cat-review { background: rgba(234,179,8,0.2); color: #facc15; }
      .cat-game { background: rgba(168,85,247,0.2); color: #c084fc; }
      .cat-lifestyle { background: rgba(236,72,153,0.2); color: #f472b6; }
      .cat-finance { background: rgba(59,130,246,0.2); color: #60a5fa; }
      .cat-health { background: rgba(34,197,94,0.2); color: #4ade80; }
      .cat-education { background: rgba(168,85,247,0.2); color: #c084fc; }
      .cat-travel { background: rgba(249,115,22,0.2); color: #fb923c; }

      .recent-date {
        font-size: 0.6875rem;
        color: var(--dash-text-dim);
        white-space: nowrap;
        flex-shrink: 0;
      }

      /* Supabase Status Section */
      .status-section {
        background: var(--dash-surface);
        border: 1px solid var(--dash-border);
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
      }

      .status-section h3 {
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--dash-text-dim);
      }

      .status-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 0.75rem;
      }

      .status-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.625rem 0.75rem;
        background: var(--dash-surface-hover);
        border-radius: 8px;
        font-size: 0.8125rem;
      }

      .status-badge {
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-size: 0.6875rem;
        font-weight: 600;
      }

      .status-badge.online { background: rgba(34,197,94,0.2); color: #4ade80; }
      .status-badge.pending { background: rgba(234,179,8,0.2); color: #facc15; }
      .status-badge.offline { background: rgba(239,68,68,0.2); color: #f87171; }

      /* Quick Links */
      .links-section {
        background: var(--dash-surface);
        border: 1px solid var(--dash-border);
        border-radius: 12px;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
      }

      .links-section h3 {
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: var(--dash-text-dim);
      }

      .links-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
      }

      .link-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        border-radius: 8px;
        background: var(--dash-surface-hover);
        border: 1px solid var(--dash-border);
        color: var(--dash-text);
        text-decoration: none;
        font-size: 0.8125rem;
        font-weight: 500;
        transition: border-color 0.2s, background 0.2s;
      }

      .link-btn:hover {
        border-color: var(--dash-accent);
        background: rgba(59,130,246,0.1);
      }

      .link-btn .link-icon { font-size: 1rem; }
      .link-btn .link-label { color: var(--dash-text-dim); font-size: 0.6875rem; margin-left: 0.25rem; }

      /* Banner */
      .data-banner {
        padding: 1rem 1.25rem;
        border-radius: 10px;
        margin-bottom: 1.25rem;
        font-size: 0.85rem;
        line-height: 1.6;
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
      }

      .data-banner.info {
        background: rgba(59,130,246,0.1);
        border: 1px solid rgba(59,130,246,0.25);
        color: #93bbfd;
      }

      .data-banner.warning {
        background: rgba(234,179,8,0.1);
        border: 1px solid rgba(234,179,8,0.25);
        color: #fde68a;
      }

      .data-banner .banner-icon { font-size: 1.25rem; flex-shrink: 0; margin-top: 1px; }

      /* Traffic Section */
      .traffic-section {
        background: var(--dash-surface);
        border: 1px solid var(--dash-border);
        border-radius: 12px;
        margin-bottom: 1.5rem;
        overflow: hidden;
      }

      .traffic-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.25rem;
        border-bottom: 1px solid var(--dash-border);
      }

      .traffic-header h3 {
        font-size: 0.9375rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }

      .refresh-btn {
        background: var(--dash-surface-hover);
        border: 1px solid var(--dash-border);
        color: var(--dash-text-dim);
        padding: 0.375rem 0.75rem;
        border-radius: 6px;
        font-size: 0.75rem;
        cursor: pointer;
        transition: all 0.2s;
      }

      .refresh-btn:hover { border-color: var(--dash-accent); color: var(--dash-text); }

      .traffic-body { padding: 1.25rem; }

      /* Metric Row */
      .metric-row {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 0.75rem;
        margin-bottom: 1.25rem;
      }

      .metric-box {
        background: var(--dash-surface-hover);
        border-radius: 8px;
        padding: 0.875rem;
        text-align: center;
      }

      .metric-box .metric-label {
        font-size: 0.6875rem;
        color: var(--dash-text-dim);
        text-transform: uppercase;
        letter-spacing: 0.04em;
        margin-bottom: 0.375rem;
      }

      .metric-box .metric-value {
        font-size: 1.5rem;
        font-weight: 800;
        line-height: 1;
        margin-bottom: 0.25rem;
      }

      .metric-box .metric-delta {
        font-size: 0.625rem;
      }

      .metric-delta.up { color: var(--dash-green); }
      .metric-delta.down { color: var(--dash-red); }
      .metric-delta.neutral { color: var(--dash-text-dim); }

      /* Hourly Chart */
      .hourly-chart {
        margin-bottom: 1.25rem;
      }

      .hourly-chart h4 {
        font-size: 0.8125rem;
        font-weight: 600;
        color: var(--dash-text-dim);
        margin-bottom: 0.75rem;
      }

      .chart-bars {
        display: flex;
        flex-direction: row;
        align-items: flex-end;
        gap: 2px;
        height: 100px;
        padding: 0 0 1.5rem;
        position: relative;
      }

      .chart-bar-col {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 4px;
        position: relative;
      }

      .chart-bar {
        width: 100%;
        min-height: 2px;
        background: linear-gradient(to top, var(--dash-accent), #60a5fa);
        border-radius: 3px 3px 0 0;
        transition: height 0.4s ease;
        position: relative;
      }

      .chart-bar:hover { opacity: 0.8; }

      .chart-bar-label {
        position: absolute;
        bottom: -1.25rem;
        font-size: 0.5625rem;
        color: var(--dash-text-dim);
      }

      .chart-bar-tooltip {
        display: none;
        position: absolute;
        top: -1.5rem;
        background: var(--dash-bg);
        border: 1px solid var(--dash-border);
        padding: 0.125rem 0.375rem;
        border-radius: 4px;
        font-size: 0.625rem;
        white-space: nowrap;
        z-index: 10;
      }

      .chart-bar-col:hover .chart-bar-tooltip { display: block; }

      /* Traffic Grid: Top Pages + Live Feed */
      .traffic-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
      }

      .traffic-panel h4 {
        font-size: 0.8125rem;
        font-weight: 600;
        color: var(--dash-text-dim);
        margin-bottom: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.375rem;
      }

      .top-page-list, .event-feed { display: flex; flex-direction: column; gap: 0; }

      .top-page-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(51,65,85,0.5);
        font-size: 0.8125rem;
      }

      .top-page-item:last-child { border-bottom: none; }

      .top-page-rank {
        font-weight: 700;
        color: var(--dash-accent);
        width: 18px;
        text-align: center;
        flex-shrink: 0;
        font-size: 0.75rem;
      }

      .top-page-slug {
        flex: 1;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-size: 0.75rem;
      }

      .top-page-views {
        font-weight: 700;
        font-size: 0.75rem;
        color: var(--dash-cyan);
        flex-shrink: 0;
      }

      /* Event Feed */
      .event-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(51,65,85,0.3);
        font-size: 0.75rem;
        min-height: 36px;
      }

      .event-item:last-child { border-bottom: none; }

      .event-icon {
        width: 22px;
        height: 22px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.6875rem;
        flex-shrink: 0;
      }

      .event-icon.pageview { background: rgba(59,130,246,0.2); }
      .event-icon.like { background: rgba(239,68,68,0.2); }
      .event-icon.coupang_click { background: rgba(249,115,22,0.2); }
      .event-icon.newsletter_subscribe { background: rgba(34,197,94,0.2); }

      .event-detail {
        flex: 1;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        color: var(--dash-text-dim);
      }

      .event-time {
        font-size: 0.625rem;
        color: var(--dash-text-dim);
        flex-shrink: 0;
      }

      .no-data {
        text-align: center;
        padding: 2rem;
        color: var(--dash-text-dim);
        font-size: 0.8125rem;
      }

      /* Source Filter Tabs */
      .source-tabs {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;
      }

      .source-tab {
        padding: 0.375rem 0.875rem;
        border-radius: 6px;
        font-size: 0.75rem;
        font-weight: 600;
        cursor: pointer;
        border: 1px solid var(--dash-border);
        background: transparent;
        color: var(--dash-text-dim);
        transition: all 0.2s;
      }

      .source-tab:hover { border-color: var(--dash-accent); color: var(--dash-text); }
      .source-tab.active { background: var(--dash-accent); border-color: var(--dash-accent); color: #fff; }
      .source-tab.active-tf { background: var(--dash-accent); border-color: var(--dash-accent); color: #fff; }
      .source-tab.active-lf { background: var(--dash-green); border-color: var(--dash-green); color: #fff; }

      /* Source Badge in traffic items */
      .src-badge {
        display: inline-block;
        padding: 0.0625rem 0.375rem;
        border-radius: 3px;
        font-size: 0.5625rem;
        font-weight: 700;
        flex-shrink: 0;
        letter-spacing: 0.02em;
      }

      .src-badge.tf { background: rgba(59,130,246,0.2); color: #60a5fa; }
      .src-badge.lf { background: rgba(34,197,94,0.2); color: #4ade80; }

      /* Source breakdown row under metric */
      .metric-breakdown {
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 0.375rem;
        font-size: 0.5625rem;
      }

      .metric-breakdown span {
        display: flex;
        align-items: center;
        gap: 0.25rem;
      }

      .dot-tf { width: 6px; height: 6px; border-radius: 50%; background: var(--dash-accent); display: inline-block; }
      .dot-lf { width: 6px; height: 6px; border-radius: 50%; background: var(--dash-green); display: inline-block; }

      /* Improved top-page-title */
      .top-page-title {
        flex: 1;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-size: 0.75rem;
      }

      /* Improved event detail */
      .event-content {
        flex: 1;
        overflow: hidden;
        min-width: 0;
        display: flex;
        flex-direction: column;
        gap: 1px;
      }

      .event-action {
        font-size: 0.6875rem;
        font-weight: 600;
        color: var(--dash-text);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        line-height: 1.3;
      }

      .event-page-title {
        font-size: 0.625rem;
        color: var(--dash-text-dim);
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        line-height: 1.3;
      }

      /* ====== VISUAL ENHANCEMENTS ====== */

      /* Source Split Bar */
      .source-split-bar {
        display: flex;
        height: 8px;
        border-radius: 4px;
        overflow: hidden;
        margin-top: 0.5rem;
        background: var(--dash-surface-hover);
      }

      .split-tf {
        background: linear-gradient(90deg, #3b82f6, #60a5fa);
        transition: width 0.6s ease;
      }

      .split-lf {
        background: linear-gradient(90deg, #22c55e, #4ade80);
        transition: width 0.6s ease;
      }

      .split-legend {
        display: flex;
        justify-content: space-between;
        font-size: 0.625rem;
