---
import '../styles/global.css';
import { getCollection } from 'astro:content';

// TechFlow 실제 블로그 포스트 파일 기반 통계 (빌드 타임)
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const tfPostCount = allPosts.length;

// TechFlow 카테고리별 포스트 수
const tfCategoryMap: Record<string, number> = {};
for (const post of allPosts) {
  const cat = post.data.category;
  tfCategoryMap[cat] = (tfCategoryMap[cat] || 0) + 1;
}

const tfCategoryStats = Object.entries(tfCategoryMap)
  .sort((a, b) => b[1] - a[1])
  .map(([name, count]) => ({ name, count }));

// TechFlow 최근 포스트 (최신 5개)
const tfRecentPosts = allPosts
  .sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime())
  .slice(0, 5)
  .map(p => ({
    title: p.data.title,
    category: p.data.category,
    pubDate: p.data.pubDate.toISOString().split('T')[0],
    slug: p.id,
  }));

// LifeFlow 정적 데이터 (cross-repo 접근 불가, 빌드 타임 하드코딩)
const lfCategories = [
  { name: 'Lifestyle', count: 4, icon: 'sparkles', color: '#ec4899' },
  { name: 'Finance', count: 4, icon: 'banknotes', color: '#3b82f6' },
  { name: 'Health', count: 3, icon: 'heart', color: '#22c55e' },
  { name: 'Education', count: 3, icon: 'book', color: '#a855f7' },
  { name: 'Travel', count: 3, icon: 'plane', color: '#f97316' },
];
const lfPostCount = lfCategories.reduce((s, c) => s + c.count, 0);
const lfCategoryCount = lfCategories.length;

// 통합 통계
const totalPosts = tfPostCount + lfPostCount;
const totalCategories = tfCategoryStats.length + lfCategoryCount;
